@model mvcWithMosh.Models.NewMovieVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-3">
    <h2>Edit Movie Details</h2>
    <hr />

    @using (Html.BeginForm("Edit", "Movies", FormMethod.Post, null))
    {
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Movie.Name)
            @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.Name)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Movie.ReleaseDate)
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
            @*@Html.EditorFor(m => m.Movie.ReleaseDate,"Strings", new { htmlAttributes = new { @type = "date", @class = "form-control" } })*@
            @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Movie.GenreId)
            @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genre, "Id", "Name"), "Select Genre", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.GenreId)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Movie.NumInStock)
            @Html.TextBoxFor(m => m.Movie.NumInStock, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.NumInStock)
        </div>
        <div class="row ">
            <div class="col-md-6 mt-3">
                @Html.HiddenFor(m => m.Movie.Id)
                <button type="submit" class="btn btn-sm btn-outline-success w-25">  Save </button>
            </div>
            <div class="col-md-6 mt-3">
                @Html.ActionLink("Cancel Editing", "Details", new { id = Model.Movie.Id }, new { @class = "btn btn-sm btn-outline-danger" })
            </div>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}