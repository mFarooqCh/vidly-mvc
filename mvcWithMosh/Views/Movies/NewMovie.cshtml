@model mvcWithMosh.Models.NewMovieVM
@{
    ViewBag.Title = "New  Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-3">
    <h2>Add Movie</h2>
    <hr />

    @using (Html.BeginForm("NewMovie", "Movies", FormMethod.Post))
    {
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Movie.Name)
            @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.Name)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Movie.ReleaseDate)
            @Html.TextBoxFor(m => m.Movie.ReleaseDate, new { @type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Movie.Genre)
            @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genre, "Id", "Name"), "Select movie Genre", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.GenreId)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(m => m.Movie.NumInStock)
            @Html.TextBoxFor(m => m.Movie.NumInStock, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Movie.NumInStock)
        </div>
        
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m=> m.Movie.Id)

        <div class="col-md-6 mt-3">
            <button type="submit" class="btn btn-sm btn-outline-success w-25">  Save </button>
        </div>
    }
</div>

@section scripts{
    
    @Scripts.Render("~/bundles/jqueryval");

    }
