@using mvcWithMosh.Models
@model Movies
@{
    ViewBag.Title = "Movie Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-3">

    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Movie Details</h4>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <td> Title </td>

                    <td> @Model.Name</td>
                </tr>
                <tr>
                    <td>Genre</td>
                    <td> @Model.Genre.Name</td>
                </tr>
                <tr>
                    <td>Release Date</td>
                    <td> @Model.ReleaseDate </td>
                </tr>
                <tr>
                    <td>Date Added</td>
                    <td> @Model.DateAdded</td>
                </tr>
                <tr>
                    <td>Number of Stock</td>
                    <td> @Model.NumInStock</td>
                </tr>
                <tr>
                    <td>Actions</td>
                    <td class="row d-flex justify-content-around">
                        @Html.ActionLink("Edit Details", "Edit", "Movies",new { id = Model.Id }, new { @class = "btn btn-outline-info btn-sm w-25" })
                        @Html.ActionLink("Remove Movie", "Delete", "Movies",new { id = Model.Id }, new { @class = "btn btn-outline-danger btn-sm w-25" })
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
